# Database Configuration
# Copy this file to .env and update the values

# PostgreSQL Database URL
# Format: postgresql://username:password@localhost:5432/database_name
DATABASE_URL="postgresql://postgres:password@localhost:5432/taskflow_db"

# Alternative format for different environments:
# Development
# DATABASE_URL="postgresql://dev_user:dev_password@localhost:5432/taskflow_dev"

# Testing
# DATABASE_URL="postgresql://test_user:test_password@localhost:5432/taskflow_test"

# Production (use connection pooling)
# DATABASE_URL="postgresql://prod_user:prod_password@prod_host:5432/taskflow_prod?connection_limit=20&pool_timeout=20"

# Optional: Enable Prisma logging
# PRISMA_LOG_LEVEL="info,warn,error"

# Optional: Enable query logging in development
# LOG_QUERIES="true"